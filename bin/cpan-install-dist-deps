#!/usr/bin/env bash

set -e -u -o pipefail

main() (
    [[ -e cpanfile ]] &&
        cpm-install "$@"

    [[ -e Build.PL ]] &&
        build-and-install-deps

    true
)

cpm-install() (
    cpm install -g \
        --cpanfile cpanfile \
        --with-recommends \
        --with-suggests \
        --show-build-log-on-failure \
        "$@"
)

build-and-install-deps() (
    # This will install both build and dist deps
    perl Build.PL
    PERL_MM_USE_DEFAULT=1 \
        ./Build installdeps \
            --cpan_client \
            'cpm install -g --show-build-log-on-failure' ||
        true
)

main "$@"
