#!/bin/bash

set -eux

if [[ -e cpanfile ]];then
    cpm install -g --cpanfile cpanfile --reinstall --with-recommends --with-suggests --show-build-log-on-failure "$@"
fi

if [[ -e Build.PL ]]; then
    # This will install both build and dist deps
    perl Build.PL
    PERL_MM_USE_DEFAULT=1 ./Build installdeps --cpan_client 'cpm install -g --reinstall --show-build-log-on-failure' || true
fi
